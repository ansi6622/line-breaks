#!/usr/bin/env ruby
require_relative "../lib/line_breaker"

["awesome-sauce.txt",
 "I knew them before they were popular.txt",
 "what!?.txt"].each do |filename|

 filepath = File.expand_path("../../data/#{filename}", __FILE__)
 file = File.read(filepath)
 
 File.open("./output/#{filename}", "w") do |f|
   f.puts LineBreaker.new(file).format
 end
end


